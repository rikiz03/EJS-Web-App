<%- include("partials/header"); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" name="postTitle" class="form-control">
  </div>

  <div class="form-outline w-50 mb-4">
    <label class="form-label" for="postBody">Post</label>
    <textarea class="form-control" name="postBody" rows="3"></textarea>
  </div>

<button type="submit" class="btn btn-primary position-absolute bottom-50 end-50" name="button">Publish</button>
</form>

<%- include("partials/footer"); -%>
